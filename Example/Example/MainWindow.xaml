<Window x:Class="Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox" FontSize="16" VerticalAlignment="Top" Margin="0,10,0,0" />
        <TextBox x:Name="Input" FontSize="16" VerticalAlignment="Top" Margin="0,30,0,0" LostFocus="Input_losfocus"/>
        <TextBox x:Name="output" FontSize="16" VerticalAlignment="Top" Margin="0,60,0,0"  />
    </Grid>
</Window>
